using namespace std;



int main()
{
	cout << "Enter a distance in miles and it will be converted into kilometers:\n";
		double miles = 0;
		cin >> miles;

		double kilometers;
		kilometers = miles * 1.609;

	cout << miles << " miles is " << kilometers << " kilometers";

}
